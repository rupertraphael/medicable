        <!--
        <Label>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Health ID Number  " FontWeight="Medium"/>
                <TextBlock Name="errorHealthID" Foreground="Red" Text="" Width="252" FontWeight="Medium"/>
            </StackPanel>
        </Label>
        -->
        <TextBlock x:Name="phone1" HorizontalAlignment="Left" Margin="125,125,0,0"  Grid.Row="1" TextWrapping="Wrap" Text="Phone no. *" FontSize="14" VerticalAlignment="Top" Height="20" Width="77"/>
        <TextBlock x:Name="errorPhone" Foreground="Red" Text="" FontWeight="Medium" Margin="207,127,451,264" Grid.Row="1" />
        <TextBox x:Name="phone_box" HorizontalAlignment="Left" Margin="125,145,0,0" LostFocus="phone_LostFocus" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="20" FontSize="13" Foreground="Gray" TextChanged="phone_box_TextChanged"/>
        <TextBlock FontSize="14" Margin="130,145,577,244" IsHitTestVisible="False" Text="403-214-8873" Foreground="DarkGray" Grid.Row="1">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=phone_box}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <TextBlock x:Name="dob1" HorizontalAlignment="Left" Margin="480,125,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Date of birth *" FontSize="14" VerticalAlignment="Top" Height="20" Width="96"/>
        <TextBlock x:Name="errorDOB1" Foreground="Red" Text="" FontWeight="Medium" Margin="581,127,94,260" Grid.Row="1" />
        <TextBox x:Name="dob_box" HorizontalAlignment="Left" Margin="480,145,0,0"  LostFocus="DOB_LostFocus" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="21" FontSize="13" Foreground="Gray" TextChanged="dob_box_TextChanged" />
        <TextBlock FontSize="14" Margin="484,146,227,244" IsHitTestVisible="False" Text="MM/DD/YYYY" Foreground="DarkGray" Grid.Row="1">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=dob_box}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock x:Name="address1" HorizontalAlignment="Left" Margin="125,190,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Address *" FontSize="14" VerticalAlignment="Top" Height="20" Width="65"/>
        <TextBox x:Name="address_box" HorizontalAlignment="Left" LostFocus="address_box_LostFocus" Margin="125,210,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="20" FontSize="13" Foreground="Gray" TextChanged="address_box_TextChanged" />
        <TextBlock x:Name="allergy1" HorizontalAlignment="Left" Margin="480,190,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Allergy Information " FontSize="14" VerticalAlignment="Top" Height="20" Width="191"/>
        <TextBox x:Name="allergy_box1" HorizontalAlignment="Left" Margin="480,210,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="20" FontSize="13" Foreground="Gray"/>
        <TextBlock x:Name="health_id1" HorizontalAlignment="Left" Margin="125,255,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Health ID *" FontSize="14" VerticalAlignment="Top" Height="20" Width="71"/>
        <TextBlock x:Name="errorHealthID1" Foreground="Red" Text="" FontWeight="Medium" Margin="202,257,428,133" Grid.Row="1" />
        <TextBox x:Name="health_id_box" HorizontalAlignment="Left" Margin="125,275,0,0" LostFocus="health_id_LostFocus" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="20" FontSize="13" Foreground="Gray" TextChanged="health_id_box_TextChanged" />
        <TextBlock FontSize="14" Margin="128,276,594,109" IsHitTestVisible="False" Text="98765-1234" Foreground="DarkGray" Grid.Row="1">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=health_id_box}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock x:Name="conditions1" HorizontalAlignment="Left" Margin="480,255,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Conditions " FontSize="14" VerticalAlignment="Top" Height="20" Width="191"/>
        <TextBox x:Name="conditions_box1" HorizontalAlignment="Left" Margin="480,275,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="20" FontSize="13" Foreground="Gray" />
        <Button Content="Create patient" HorizontalAlignment="Left" Background="#1d4ed8" Foreground="#eff6ff" FontWeight="Bold" Margin="292,328,0,0" Grid.Row="1" VerticalAlignment="Top" Height="36" Width="161" Click="CreatePatientBtn_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Error}" Value="{x:Null}">
                            <Setter Property="IsEnabled" Value="True"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <TextBlock x:Name="errorFirstName" Foreground="Red" Text="" FontWeight="Medium" Margin="205,61,464,328" Grid.Row="1" RenderTransformOrigin="0.5,0.5" >
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.152"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="errorLastName" Foreground="Red" Text="" FontWeight="Medium" Margin="560,62,94,329" Grid.Row="1" />
        <TextBlock x:Name="errorAddress1" Foreground="Red" Text="" FontWeight="Medium" Margin="190,190,476,201" Grid.Row="1" />


    </Grid>


</Page>
